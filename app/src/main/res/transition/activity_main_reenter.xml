<?xml version="1.0" encoding="utf-8"?>
<transitionSet
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:duration="350">

    <!-- Start scaling & fading RV to give the impression of zoom in -->
    <transitionSet>
        <targets>
            <target android:targetId="@id/container_on_boarding"
                />
        </targets>
        <transition
                class="com.arcadan.dodgetheenemies.onboarding.PopTransition"
                app:startScale="0.95"
                app:endScale="1.0"/>
        <transition
                class="com.arcadan.dodgetheenemies.onboarding.FadeTransition"
                app:startAlpha="0.3"
                app:endAlpha="1.0"/>
    </transitionSet>

</transitionSet>